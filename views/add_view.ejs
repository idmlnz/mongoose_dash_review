      <div class="container">
        <div class="row">
          <div class="well col-sm-6 col-sm-offset-3" style="margin-top: 100px">
            <form action="/mongooses" method="post">

                <div class="form-group row">
                  <label for="animal-type" class="col-xs-2 col-form-label">Animal:</label>
                  <div class="col-xs-10">
                    <input class="form-control" type="text" name="animal" placeholder="Type of animal" id="animal-type">
