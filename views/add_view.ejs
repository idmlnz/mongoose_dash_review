                </div>

                <div class="form-group row">
                  <label for="num-legs" class="col-xs-2 col-form-label">Legs:</label>
                  <div class="col-xs-10">
                    <input class="form-control" type="text" name="legs" placeholder="Number of legs" id="num-legs">
                  </div>
                </div>

                <div class="form-group row">
                  <label for="color" class="col-xs-2 col-form-label">Color:</label>
                  <div class="col-xs-10">
                    <input class="form-control" type="text" name="color" placeholder="Enter color" id="color">
                  </div>
                </div>

                <div class="form-group row">
                    <div class="col-sm-12">
                      <button type="input" class="btn pull-right btn-info">Submit</button>
                    </div>
                </div>

            </form>  <!-- End form -->

          </div> <!-- End class column -->
        </div> <!-- End class row -->
      </div> <!-- End container -->

