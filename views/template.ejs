<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>Survey Form Mongoose</title>
  <meta name="description" content="Survey Form Mongoose App ">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">

  <!-- Optional theme -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap-theme.min.css">
</head>
<body>

  <div class="container">
    <div class="row">
      <% for (var k in users) { %>
            <p><%= users[k] %></p>
      <% } %>

      <div class="well col-sm-6 col-sm-offset-3" style="margin-top: 100px">
        <form action="/users" method="post">

            <div class="form-group row">
              <label for="example-text-input" class="col-xs-2 col-form-label">Your Name:</label>
              <div class="col-xs-10">
                <input class="form-control" type="text" name="name" placeholder="Enter name" id="example-text-input">
              </div>
            </div>

            <div class="form-group row">
              <label for="age" class="col-xs-2 col-form-label">Your Age:</label>
              <div class="col-xs-10">
                <input class="form-control" type="text" name="age" placeholder="Enter age" id="age">
              </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-12">
                  <button type="input" class="btn pull-right btn-info">Submit</button>
                </div>
            </div>

        </form>  <!-- End form -->

      </div> <!-- End class column -->
    </div> <!-- End class row -->
  </div> <!-- End container -->

  <script src="http://code.jquery.com/jquery-2.1.1.min.js"></script>
  <!-- Latest compiled and minified JavaScript -->
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>

</body>
</html>